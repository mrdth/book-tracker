# Database Configuration
DATABASE_PATH=./data/books.db

# Hardcover API Configuration
# Get your API key from: https://hardcover.app/account/api
HARDCOVER_API_URL=https://api.hardcover.app/v1/graphql
HARDCOVER_API_KEY=your_api_key_here

# Book Collection Filesystem Path
# Structure: {COLLECTION_ROOT}/Author name/Book title (ID)/
COLLECTION_ROOT=/path/to/your/book/collection

# Server Configuration
PORT=3000
NODE_ENV=development

# Logging Configuration
# Levels: debug, info, warn, error
LOG_LEVEL=info

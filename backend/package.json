{
  "name": "book-tracker-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite-node --watch src/index.ts",
    "build": "tsc && vite build",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "node --loader ts-node/esm src/db/migrate.ts",
    "db:backfill-sort-names": "node --loader ts-node/esm src/db/backfillSortNames.ts",
    "db:schema": "sqlite3 data/books.db '.schema'",
    "db:reset": "rm -f data/books.db && npm run db:migrate"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "graphql": "^16.12.0",
    "graphql-request": "^7.3.1",
    "p-limit": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-node": "^5.0.0",
    "vitest": "^4.0.8"
  }
}
